<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"

        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.crappy"
        version     = "1.0.0"
        versionCode = "10" >

        <!-- versionCode is optional and Android only -->

        <preference name="phonegap-version" value="3.6.3" />

        <name>Crappy Bird</name>

        <description>
        Its a Flying flappy Bird. 
        </description>

        <author href="http://www.webflax.in/" email="shubhamjaiswal1860@gmail.com">
        Shubham Jaiswal
        </author>
		<preference name="permissions"                value="none"/>
 <preference name="orientation"                value="default" />        <!-- all: default means both landscape and portrait are enabled -->
 <preference name="target-device"              value="universal" />      <!-- all: possible values handset, tablet, or universal -->
 <preference name="fullscreen"                 value="true" />           <!-- all: hides the status bar at the top of the screen -->
   
<gap:plugin name="org.apache.cordova.media" version="0.2.13" />
		<gap:plugin name="org.apache.cordova.splashscreen" />
		
		<icon src="favicon.png" />
    <icon src="favicon.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="favicon.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="favicon.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="favicon.png"  gap:platform="android"    gap:density="xhdpi" />
    <icon src="favicon.png"  gap:platform="winphone" />
    <gap:splash src="splash2.png" gap:platform="android" gap:qualifier="land-hdpi" />
<gap:splash src="splash2.png" gap:platform="android" gap:qualifier="land-ldpi" />
<gap:splash src="splash2.png" gap:platform="android" gap:qualifier="land-mdpi" />
<gap:splash src="splash2.png" gap:platform="android" gap:qualifier="land-xhdpi" />

<gap:splash src="splash2.png" gap:platform="android" gap:qualifier="port-hdpi" />
<gap:splash src="splash2.png" gap:platform="android" gap:qualifier="port-ldpi" />
<gap:splash src="splash2.png" gap:platform="android" gap:qualifier="port-mdpi" />
<gap:splash src="splash2.png" gap:platform="android" gap:qualifier="port-xhdpi" />
<platform name="wp8">
    <!-- images are determined by width and height. The following are supported -->
    <splash src="splash1.jpg" width="768" height="1280"/>
</platform>

    </widget>
